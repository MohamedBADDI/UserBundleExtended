    <div class="col-md-5">
        <h1>{{ 'title.login'|trans }}</h1>
        <hr>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

            <label class="control-label required" for="username">{{ 'label.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" style="width:200px"
                   class="form-control" required="required"/>
            <br>
            <label class="control-label required" for="password">{{ 'label.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" style="width:200px" class="form-control"
                   required="required"/>

            <br>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'label.login.remember_me'|trans }}</label>

            <div style="text-align: center;padding-top:16px">
                <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                       value="{{ 'login.button'|trans }}"/>
            </div>
