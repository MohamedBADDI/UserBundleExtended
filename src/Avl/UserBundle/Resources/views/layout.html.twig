{% extends "base.html.twig" %}

{% block title 'UserBundleExtended by avl' %}

{% block head %}
    <style>
        body {
            background-image: url({{ asset('bundles/user/images/bg.png') }});
            background-position: left -30px;
            background-attachment: fixed;
            background-repeat: repeat;
            background-repeat: no-repeat;
            background-color: #C0DEED;
        }
        .container {
            width:1000px;
        }
        .form-control {
            margin-bottom:10px;
        }
        .navbar-nav>li>a:hover {
            color:#167ac6 !important;
        }
        .navbar-default {
            background-color:white !important;
        }

        .nav .open>a, .nav .open>a:hover, .nav .open>a:focus {
            background-color:white !important;
        }

    </style>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}

{% block body %}
    {% block content_header %}
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div style="margin-top:16px;color:silver">
                    This is the footer with copyright...Your slogan here....
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="collapse navbar-collapse" style="width: 1000px;margin:0 auto;" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    {% block content_header_more %}
                        <li>
                            <img src="/bundles/user/images/logo.png" style="height:40px;margin-top: 3px;">
                        </li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li>
                                <a role="presentation" href="{{ path('fos_ext_avl_user_dashboard_show') }}">
                                    <span class="glyphicon glyphicon-cloud" aria-hidden="true" style="top:2px"></span>
                                    Dashboard
                                </a>
                            </li>
                            <li>
                                <a role="presentation" href="{{ path('fos_ext_avl_user_dashboard_show') }}">
                                    <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="top:2px"></span>
                                    Events
                                    <span class="label label-success label-as-badge" style="top: -10px;position: relative;" title="Today there are 2 events">2</span>
                                </a>
                            </li>
                            <li>
                                <a role="presentation" href="{{ path('fos_ext_avl_user_dashboard_show') }}">
                                    <span class="glyphicon glyphicon-envelope" aria-hidden="true" style="top:2px"></span>
                                    Inquire
                                    <span class="label label-danger label-as-badge" style="top: -10px;position: relative;" title="You have 78 inquiry about your events">78</span>
                                </a>
                            </li>
                            <li>
                                <a role="presentation" href="{{ path('fos_ext_avl_user_dashboard_show') }}">
                                    <span class="glyphicon glyphicon-comment" aria-hidden="true" style="top:2px"></span>
                                    Comments
                                    <span class="label label-warning label-as-badge" style="top: -10px;position: relative;" title="You have 10 comments at your events">10</span>
                                </a>
                            </li>
                        {% endif %}
                        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a role="presentation" href="{{ path('fos_user_security_login') }}">Login</a></li>
                            <li><a role="presentation" href="{{ path('fos_user_registration_register') }}">Registrieren</a></li>
                            <li><a role="presentation" href="{{ path('fos_user_resetting_request') }}">Passwort vergessen</a></li>
                        {% endif %}
                    {% endblock %}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul class="nav navbar-nav navbar-right">
                    <li style="padding-top:6px;">
                        <img src="{{ UserProfileImagePath() }}" height="40"/>
                    </li>
                    <li style="color:black;font-weight: normal;">
                        <a href="{{ path('fos_user_profile_show') }}"  id="dropdownMenu1" data-toggle="dropdown">
                            {{ app.session.get('username') }}
                            <span class="glyphicon glyphicon-cog" aria-hidden="true" style="top:2px"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li role="presentation"><a role="menuitem" href="{{ path('fos_user_profile_show') }}">My Account</a></li>
                            <li role="presentation"><a role="presentation" href="{{ path('fos_user_change_password') }}">Change password</a></li>
                            <li role="presentation"><a href="{{ path('fos_user_security_logout') }}">FAQ & Help</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}" style="padding-left:0px;" title="Logout">
                            <span class="glyphicon glyphicon-log-out" style="top:2px"></span>
                        </a>
                    </li>

                </ul>
                {% endif %}
            </div>
        </nav>
    {% endblock %}

    <div class="row" style="border-radius: 10px;background-color:white;padding-bottom:5%;margin-top:120px">
        <div style="margin:2%">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message" style="padding:20px;border-radius:10px;background-color:#C0DEED;margin-bottom:16px;">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash-message" style="padding:20px;border-radius:10px;background-color:red;color:white;margin-bottom:16px;">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
        {% block content %}
            {% block fos_user_content %}{% endblock %}
        {% endblock %}
    </div>
    <br><br><br><br>
{% endblock %}