{% extends "base.html.twig" %}
{% set currentRouteName = app.request.attributes.get('_route') %}
{% block title 'UserBundleExtended by avl' %}

{% block head %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}

{% block body %}
    {% block content_header %}
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div style="margin-top:16px;color:silver">
                    {{ 'footer.text'|trans }}
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                    <i class="fa fa-reorder"></i>
                </button>
                <a href="#" class="navbar-brand">MT_CNSL</a>
            </div>
            <div class="collapse navbar-collapse" style="width: 1000px;margin:0 auto;" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    {% block content_header_more %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li>
                                <a role="presentation" href="{{ path('fos_ext_avl_user_dashboard_show') }}"  {% if currentRouteName == 'fos_ext_avl_user_dashboard_show' %}style="color:#167ac6 !important;"{% endif %}>
                                    <span class="glyphicon glyphicon-cloud" aria-hidden="true" style="top:2px"></span>
                                    {{ 'link.dashboard'|trans }}
                                </a>
                            </li>
                            <li>
                                <a role="presentation" href="{{ path('avl_event_show') }}" {% if currentRouteName == 'avl_event_show' %}style="color:#167ac6 !important;"{% endif %}>
                                    <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="top:2px"></span>
                                    {{ 'link.events'|trans }}
                                    <span class="label label-success label-as-badge" style="top: -10px;position: relative;" title="{{ 'link.events.badge.title'|trans }}">2</span>
                                </a>
                            </li>
                        {% endif %}
                        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a role="presentation" href="{{ path('fos_user_security_login') }}">{{ 'link.login'|trans }}</a></li>
                            <li><a role="presentation" href="{{ path('fos_user_registration_register') }}">{{ 'link.register'|trans }}</a></li>
                            <li><a role="presentation" href="{{ path('fos_user_resetting_request') }}">{{ 'link.resetting.password'|trans }}</a></li>
                        {% endif %}
                    {% endblock %}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul class="nav navbar-nav navbar-right">
                    <li style="padding-top:6px;">
                        <img src="{{ UserProfileImagePath() }}" height="40" style="border-radius: 20px"/>
                    </li>
                    <li style="color:black;font-weight: normal;">
                        <a href="{{ path('fos_user_profile_show') }}">
                            {{ app.session.get('username') }}
                        </a>
                    </li>
                    <li style="color:black;font-weight: normal;">
                        <a href="{{ path('fos_user_profile_show') }}"  id="dropdownMenu1" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true" style="top:2px"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li role="presentation"><a role="menuitem" href="{{ path('fos_user_profile_show') }}">{{ 'link.account'|trans }}</a></li>
                            <li role="presentation"><a role="presentation" href="{{ path('fos_user_change_password') }}">{{ 'link.change.password'|trans }}</a></li>
                            <li role="presentation"><a href="{{ path('avl_content_show', {'slug': 'faq'}) }}">{{ 'link.faq'|trans }}</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}" style="padding-left:0px;" title="Logout">
                            <span class="glyphicon glyphicon-log-out" style="top:2px"></span>
                        </a>
                    </li>

                </ul>
                {% endif %}
            </div>
        </nav>
    {% endblock %}

    <div class="row" style="border-top:3px solid #e7eaec;background-color:white;padding-bottom:5%;margin-top:100px">
        <div style="margin:2%">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message" style="padding:20px;border-radius:10px;background-color:#C0DEED;margin-bottom:16px;">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash-message" style="padding:20px;border-radius:10px;background-color:red;color:white;margin-bottom:16px;">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
        {% block content %}
            {% block fos_user_content %}{% endblock %}
        {% endblock %}
    </div>
    <br><br><br><br>
{% endblock %}